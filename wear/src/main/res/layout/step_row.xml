<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/step_number"
        android:layout_marginStart="@dimen/step_number_margin"
        android:layout_marginTop="@dimen/step_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beat eggs using stand mixer until still peaks form, then transfer into pie dish"
        android:id="@+id/step_text"
        android:layout_marginStart="@dimen/step_margin"
        android:layout_marginTop="@dimen/step_vertical_margin"
        android:layout_marginBottom="@dimen/step_vertical_margin" />


</RelativeLayout>
